{
  "compilerOptions": {
    /* Visit https://aka.ms/tsconfig to read more about this file */
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "Bundler",   
    "allowJs": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "noEmitOnError": true,
    "outDir": "scripts/dist",
    "strict": true,
    "skipLibCheck": true,
  },
  "include": ["./scripts/**/*"],
}
